<%= turbo_frame_tag "company_management" do %>
  <% if turbo_frame_request? %>
    <div class="mx-auto max-w-7xl">
      <div class="rounded-xl border border-slate-200 bg-white p-6">
        <h2 class="text-lg font-semibold text-slate-900 mb-6"><%= t('companies.new.title') %></h2>
        <%= render "form", company: @company, page_load: false %>
      </div>
    </div>
  <% else %>
    <div class="flex flex-col items-center justify-center min-h-[calc(100vh-10rem)] w-full px-4">
      <div class="w-full mx-auto max-w-7xl">
        <div class="rounded-xl border border-slate-200 bg-white p-6">
          <h2 class="text-lg font-semibold text-slate-900 mb-6"><%= t('companies.new.title') %></h2>
          <%= render "form", company: @company, page_load: true %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
