<main class="w-full mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8" data-controller="recruitments--recruitments-form companies--companies recruitments--recruitments roles--roles-form">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-4xl font-bold text-slate-900"><%= @company.name %></h1>
      <p class="mt-2 text-slate-600"><%= t('companies.show.subtitle') %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to t('companies.show.buttons.back'), companies_path, class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700" %>
    </div>
  </div>

  <div class="hidden mt-6" data-recruitments--recruitments-form-target="recruitmentForm">
    <%= turbo_frame_tag "recruitment_management" do %>
    <% end %>
  </div>

  <div class="hidden mt-6 mb-6" data-roles--roles-form-target="roleForm">
    <%= turbo_frame_tag "role_management" do %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div class="lg:col-span-2">
      <div class="rounded-lg border border-slate-200 bg-white p-6 h-full">
        <div class="flex flex-row justify-between items-start">
          <h2 class="text-lg font-semibold text-slate-900 mb-4"><%= t('companies.show.details') %></h2>
          <span class="inline-flex w-[60px] items-center justify-center rounded-lg px-3 py-1 text-xs <%= status_colors[@company.status] %>">
            <%= @company.status_humanize %>
          </span>
        </div>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label class="text-sm font-medium text-slate-600"><%= t('companies.show.labels.cnpj') %></label>
            <p class="mt-2 text-slate-900"><%= formatted_cnpj(@company.cnpj) %></p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600"><%= t('companies.show.labels.responsible_name') %></label>
            <p class="mt-2 text-slate-900"><%= @company.responsible_name %></p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600"><%= t('companies.show.labels.email') %></label>
            <p class="mt-2 text-slate-900">
              <%= @company.email %>
            </p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600"><%= t('companies.show.labels.phone') %></label>
            <p class="mt-2 text-slate-900"><%= formatted_phone(@company.phone_number) %></p>
          </div>
        </div>
      </div>
    </div>

    <%= render 'show_actions' %>
  </div>

  <div class="mb-6 mt-6">
    <%= render 'recruitments/filters' %>
  </div>

  <%= render 'recruitments/recruitments_list', home: false %>
</main>
