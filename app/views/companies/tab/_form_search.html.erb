<%= form_with url: company_path(@company), method: :get, data: { controller: "search", turbo_frame: "companies_list" }, class: "relative w-full sm:w-72" do |f| %>
  <%= f.text_field :query,
    value: params[:query],
    placeholder: t('companies.form_search.placeholder.query'),
    class: "w-full pl-10 pr-3 py-2 border border-slate-300 rounded-lg leading-5 bg-white placeholder-slate-500 focus:outline-none focus:placeholder-slate-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
    autocomplete: "off"
  %>

  <%= f.button type: "submit", class: "absolute inset-y-0 left-0 pl-3 flex items-center bg-transparent border-0 cursor-pointer z-10 focus:outline-none group" do %>
    <%= inline_svg_tag 'icons/search.svg', class: "w-5 h-5 text-slate-400 group-hover:text-blue-600 transition-colors" %>
  <% end %>
<% end %>
