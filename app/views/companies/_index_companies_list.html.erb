<%= if params[:tab] == 'roles' %>
  <%= turbo_frame_tag "companies_list" do %>
    <% if @companies.any? %>
      <div class="overflow-x-auto rounded-xl border border-slate-200 bg-white shadow-sm" data-companies--companies-target="table">
        <table class="w-full">
          <div class="px-6 py-4 border-b border-slate-200">
            <h2 class="text-lg font-semibold text-slate-900"><%= t('companies.index_companies_list.title') %></h2>
            <p class="text-sm text-slate-600 mt-1"><%= t('companies.index_companies_list.companies_count', companies: @companies.count, total: @companies.total_count) %></p>
          </div>
          <thead class="border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.name') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.email') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.responsible_name') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.cnpj') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.status') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.phone') %></th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900"><%= t('companies.index_companies_list.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr class="text-center border-b border-slate-200 hover:bg-slate-50 transition-colors" data-companies---companies-target="companyRow">
                <td class="px-6 py-4">
                  <p class="text-center text-sm text-slate-600 hidden_exceed_text"><%= company.name %></p>
                </td>
                <td class="px-6 py-4">
                  <p class="text-center text-sm text-slate-600 hidden_exceed_text"><%= company.email %></p>
                </td>
                <td class="px-6 py-4">
                  <p class="text-center text-sm text-slate-600"><%= company.responsible_name %></p>
                </td>
                <td class="px-6 py-4">
                  <p class="text-center text-sm text-slate-600"><%= formatted_cnpj(company.cnpj) %></p>
                </td>
                <td class="px-6 py-4 text-center">
                  <span class="inline-flex w-[60px] items-center justify-center rounded-lg px-3 py-0.5 text-xs <%= status_colors[company.status] %>">
                    <%= company.status_humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= formatted_phone(company.phone_number) %></td>
                <td class="px-6 py-4 text-right">
                  <div class="flex gap-2 justify-center">
                    <%= link_to inline_svg_tag('icons/archive.svg', class: "lucide lucide-file-text h-4 w-4 text-blue-600"),
                          company_path(company),
                          class: "text-sm font-medium text-blue-600 hover:text-blue-700",
                          data: { turbo_frame: "_top" } %>

                    <%= link_to inline_svg_tag('icons/pencil.svg', class: "lucide lucide-pen h-4 w-4 text-blue-600"),
                          edit_company_path(company),
                          class: "text-sm font-medium text-blue-600 hover:text-blue-700",
                          data: { turbo_frame: "company_management", action: "click->companies--companies-form#forceOpen" } %>

                    <%= link_to inline_svg_tag('icons/trash_can.svg', class: "lucide lucide-trash2 h-4 w-4 text-red-600"),
                        company_path(company),
                        data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?", turbo_frame: '_top' },
                        class: "text-sm font-medium text-red-600 hover:text-red-700",
                        id: 'delete-company-button' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @companies, window: 1, outer_window: 1 %>
      </div>
    <% else %>
      <div class="rounded-xl border border-slate-200 bg-white px-6 py-4 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900"><%= t('companies.index_companies_list.title') %></h2>
        <p class="text-sm text-slate-600 mt-1"><%= t('companies.index_companies_list.companies_count', companies: @companies.count, total: @companies.total_count) %></p>

        <div class="p-12 text-center">
          <p class="text-slate-600"><%= t('companies.index_companies_list.none_company') %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
