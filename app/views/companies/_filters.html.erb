<div class="mb-6">
  <div class="flex flex-row justify-between">
    <div class="flex gap-2 flex-wrap">
      <% current_status = params[:status].presence %>

      <%= button_tag t('companies.filters.buttons.all'),
          class: link_classes.call(current_status.blank?),
          data: {
            action: "click->companies--companies#filterByStatus",
            status: "",
            "companies--companies_target": "filterButton"
          }
        %>

      <% Company::Status.to_a.each do |status| %>
          <%= button_tag status.first,
            type: 'button',
            class: link_classes.call(current_status == status.last),
            data: {
              action: "click->companies--companies#filterByStatus",
              status: status.last,
              "companies--companies_target": "filterButton"
            }
          %>
        <% end %>
    </div>

    <%= render 'form_search' %>
  </div>
</div>
