<div class="mt-8">
  <% if @roles.any? %>
    <div class="overflow-x-auto rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="w-full">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900">Lista de Vagas</h2>
          <p class="text-sm text-slate-600 mt-1">Mostrando <%= @roles.count %> de <%= 200 %> Vagas</p>
        </div>
        <thead class="border-b border-slate-200">
          <tr>
            <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900">Nome</th>
            <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900">Descrição</th>
            <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900">Status</th>
            <th class="px-6 py-4 text-center text-sm font-semibold text-slate-900">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
            <tr class="text-center border-b border-slate-200 hover:bg-slate-50 transition-colors">
              <td class="px-6 py-4">
                <p class="text-left font-medium text-slate-900"><%= role.name %></p>
              </td>
              <td class="px-6 py-4">
                <p class="text-left text-sm text-slate-600"><%= role.description %></p>
              </td>
              <td class="px-6 py-4">
                <p class="text-left text-sm text-slate-600"><%= role.status_humanize %></p>
              </td>
              <td class="px-6 py-4 text-right">
                <div class="flex gap-2 justify-center">
                  <%= link_to inline_svg_tag('icons/pencil.svg', class: "lucide lucide-pen h-4 w-4 text-blue-600"),
                        edit_role_path(role),
                        class: "text-sm font-medium text-blue-600 hover:text-blue-700",
                        data: { turbo_frame: "role_management", action: "click->candidates-form#forceOpen" } %>

                  <%= link_to inline_svg_tag('icons/trash_can.svg', class: "lucide lucide-trash2 h-4 w-4 text-red-600"),
                      candidate_path(candidate),
                      data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?" },
                      class: "text-sm font-medium text-red-600 hover:text-red-700",
                      id: 'delete-candidate-button' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @roles, window: 5, outer_window: 1 %>
    </div>
  <% else %>
    <div class="rounded-xl border border-slate-200 bg-white px-6 py-4 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900">Lista de Vagas</h2>
      <p class="text-sm text-slate-600 mt-1">Mostrando <%= @roles.count %> Vagas</p>

      <div class="p-12 text-center">
        <p class="text-slate-600">Nenhuma vaga encontrada</p>
      </div>
    </div>
  <% end %>
</div>
