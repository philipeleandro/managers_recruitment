<div>
  <%= form_with(model: recruitment, data: { action: "turbo:submit-end->recruitments--recruitments-form#onPostSuccess" }) do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="col-span-1 mb-6">
        <%= form.label :description, class: "block text-sm text-slate-900 mb-2" %>
        <%= form.text_field :description, class: "w-full py-2.5 pl-4 text-sm rounded-lg border border-slate-300 px-4 py-2 text-slate-900 placeholder-slate-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500", placeholder: t('recruitments.form.placeholder.description') %>
      </div>

      <div class="col-span-1">
        <%= form.label :value, class: "block text-sm text-slate-900 mb-2" %>
        <%= form.number_field :value, class: "w-full py-2.5 pl-4 text-sm rounded-lg border border-slate-300 px-4 py-2 text-slate-900 placeholder-slate-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500", placeholder: t('recruitments.form.placeholder.value') %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="col-span-1 mb-6">
        <%= form.label :opening_date, class: "block text-sm text-slate-900 mb-2" %>
        <%= form.date_field :opening_date, class: "w-full py-2.5 pl-4 text-sm rounded-lg border border-slate-300 px-4 py-2 text-slate-900 placeholder-slate-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500", placeholder: t('recruitments.form.placeholder.opening_date') %>
      </div>

      <div>
        <%= form.label :finish_date, class: "block text-sm text-slate-900 mb-2" %>
        <%= form.date_field :finish_date, class: "w-full py-2.5 pl-4 text-sm rounded-lg border border-slate-300 px-4 py-2 text-slate-900 placeholder-slate-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500", placeholder: t('recruitments.form.placeholder.finish_date') %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm text-slate-900 mb-2" %>
        <div class="relative">
          <%= form.select :status, Recruitment::Status.to_a.map { |s| [s.first, s.last] }, {}, class: "appearance-none w-full py-2.5 pl-4 text-sm rounded-lg border border-slate-300 px-4 py-2 pr-10 text-slate-900 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white" %>
          <div class="pointer-events-none absolute inset-y-0 right-3 flex items-center text-slate-500">
            <%= inline_svg_tag 'icons/dropdown-arrow.svg' %>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-8 flex gap-6">
      <%= form.submit recruitment.new_record? ? "Criar Recrutamento" : "Atualizar Recrutamento", class: "rounded-lg w-full bg-blue-600 px-6 py-2 text-sm font-medium text-white hover:bg-blue-700 cursor-pointer" %>
      <%= link_to 'Cancelar', '#',
        class: 'rounded-lg w-full border border-slate-200 ' \
              'px-6 py-2 text-sm font-medium text-slate-900 ' \
              'hover:bg-slate-50 flex justify-center',
        data: {
          turbo_frame: 'recruitment_management',
          action: 'click->recruitments--recruitments-form#hideForm'
      } %>
    </div>
  <% end %>
</div>
