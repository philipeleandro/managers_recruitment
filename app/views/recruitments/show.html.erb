<main class="w-full mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8" data-controller="recruitments--recruitments">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-4xl font-bold text-slate-900">Detalhes do processo seletivo</h1>
      <p class="mt-2 text-slate-600"><%= t('companies.show.subtitle') %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to t('companies.show.buttons.back'), company_path(@recruitment.company_id), class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="lg:col-span-3">
      <div class="rounded-lg border border-slate-200 bg-white p-6 h-full">
        <div class="flex flex-row justify-between items-start">
          <h2 class="text-lg font-semibold text-slate-900 mb-4"><%= t('companies.show.details') %></h2>
          <span class="inline-flex w-[60px] items-center justify-center rounded-lg px-3 py-1 text-xs <%= status_colors[@recruitment.status] %>">
            <%= @recruitment.status %>
          </span>
        </div>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-3 mb-6">
          <div>
            <label class="text-sm font-medium text-slate-600">Valor:</label>
            <p class="mt-2 text-slate-900"><%= "R$ #{number_with_precision(@recruitment.value.round(2), precision: 2)}" %></p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600">Data de abertura:</label>
            <p class="mt-2 text-slate-900"><%= @recruitment.opening_date.strftime("%d/%m/%Y") %></p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600">Data de conclusão:</label>
            <p class="mt-2 text-slate-900">
              <%= @recruitment.finish_date.strftime("%d/%m/%Y") %>
            </p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600">Empresa:</label>
            <p class="mt-2 text-blue-600 hover:text-blue-700"><%= link_to @recruitment.company.name, company_path(@recruitment.company.id) %></p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600">Cargos:</label>
            <p class="mt-2 text-slate-900">Assistente, tentente, gerente, escritorgerente, escritorgerente, escritorgerente, escritor</p>
          </div>
          <div>
            <label class="text-sm font-medium text-slate-600">Quantidade de Candidatos:</label>
            <p class="mt-2 text-slate-900">27</p>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-1 mb-6">
          <div>
            <label class="text-sm font-medium text-slate-600">Descrição:</label>
            <p class="mt-2 text-slate-900"><%= @recruitment.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render 'roles_list' %>
</main>
