<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-slate-900">RecrutaAI</h1>
      <p class="mt-2 text-slate-600">Sign in to your account</p>
    </div>

    <div class="bg-white flex flex-col gap-6 rounded-xl py-6 shadow-lg border-0">
      <div class="px-6 pb-4">
        <div class="font-semibold text-2xl text-slate-900">Welcome back</div>
        <div class="text-slate-500 text-sm">Enter your credentials to access your account</div>
      </div>

      <div class="px-6">
        <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-5") do |form| %>
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-slate-900 mb-2" %>
            <%= form.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "your@email.com",
                class: "w-full rounded-lg border border-slate-200 bg-white px-4 py-2.5 text-slate-900 placeholder-slate-400 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-colors" %>
          </div>

          <div>
            <%= form.label :password, class: "block text-sm font-medium text-slate-900 mb-2" %>
            <div class="relative">
              <%= form.password_field :password,
                  autocomplete: "current-password",
                  placeholder: "••••••••",
                  class: "w-full rounded-lg border border-slate-200 bg-white px-4 py-2.5 text-slate-900 placeholder-slate-400 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-colors" %>
              <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-eye h-4 w-4"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path><circle cx="12" cy="12" r="3"></circle></svg>
              </button>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="flex items-center gap-2 cursor-pointer">
                <%= form.check_box :remember_me, class: "rounded border-slate-200 text-blue-600 focus:ring-blue-500 cursor-pointer" %>
                <span class="text-sm text-slate-600">Remember me</span>
              </label>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-blue-600 hover:text-blue-700" %>
            <% end %>
          </div>

          <%= form.submit "Sign In", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md transition-all bg-blue-600 text-white hover:bg-blue-700 h-9 px-4 w-full py-2.5 text-base font-medium cursor-pointer shadow-sm" %>

          <div class="text-center">
            <span class="text-sm text-slate-600">
              Don't have an account?
              <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-700" %>
            </span>
          </div>

        <% end %>
      </div>
    </div>

    <p class="mt-6 text-center text-xs text-slate-500">
      By signing in, you agree to our 
      <a href="#" class="underline hover:text-slate-700">Terms of Service</a> and 
      <a href="#" class="underline hover:text-slate-700">Privacy Policy</a>
    </p>

  </div>
</div>
