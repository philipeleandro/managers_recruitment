<%# app/views/kaminari/_page.html.erb %>
<% if page.current? %>
  <span class="relative z-10 inline-flex items-center bg-blue-600 px-4 py-2 text-sm text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 first:rounded-l-md last:rounded-r-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, class: "relative inline-flex items-center px-4 py-2 text-sm text-slate-900 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 first:rounded-l-md last:rounded-r-md" %>
<% end %>
