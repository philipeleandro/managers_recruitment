<%= turbo_frame_tag "candidate_management" do %>
  <% if turbo_frame_request? %>
    <div class="mx-auto max-w-7xl">
      <div class="rounded-xl border border-slate-200 bg-white p-6">
        <h2 class="text-lg font-semibold text-slate-900 mb-6">Adicionar Novo Candidato</h2>
        <%= render "form", candidate: @candidate %>
      </div>
    </div>

  <% else %>
    <div class="flex flex-col items-center justify-center min-h-[calc(100vh-10rem)] w-full px-4">
      <div class="w-full mx-auto max-w-7xl">
        <div class="rounded-xl border border-slate-200 bg-white p-6">
          <h2 class="text-lg font-semibold text-slate-900 mb-6">Adicionar Novo Candidato</h2>
          <%= render "form", candidate: @candidate %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
