<main class="min-h-screen" data-controller="candidates--candidates-form candidates--candidates">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-slate-900"><%= t('candidates.index.title') %></h1>
          <p class="mt-2 text-slate-600"><%= t('candidates.index.subtitle') %></p>
        </div>
        <%= link_to t('candidates.index.new_candidate'), new_candidate_path,
            class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700",
            data: { turbo_frame: "candidate_management",
            action: "click->candidates--candidates-form#showForm" },
            id: 'new-candidate-button' %>
      </div>

      <div class="mt-6 hidden" data-candidates--candidates-form-target="candidateForm">
        <%= turbo_frame_tag "candidate_management" do %>
        <% end %>
      </div>
    </div>

    <%= render 'filters' %>

    <%= render 'index_candidates_list' %>
  </div>
</main>
