<div class="mb-8">
  <div class="mb-4 flex items-center justify-between">
    <h3 class="text-xl font-bold text-slate-900">Serviços disponíveis</h3>
    <%= link_to "Ver todos", "#", class: "text-sm font-medium text-blue-600 hover:text-blue-700" %>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <%= link_to "#", class: "group rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:border-blue-300 hover:shadow-md" do %>
      <div class="mb-3 inline-block rounded-lg bg-blue-50 p-3 group-hover:bg-blue-100">
        <%= inline_svg_tag "icons/file-text.svg", class: "h-6 w-6 text-blue-600"%>
      </div>
      <h4 class="font-semibold text-slate-900">Criar processo</h4>
      <p class="mt-1 text-sm text-slate-600">Comece criando um processo seletivo</p>
    <% end %>

    <%= link_to "#", class: "group rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:border-blue-300 hover:shadow-md" do %>
      <div class="mb-3 inline-block rounded-lg bg-blue-50 p-3 group-hover:bg-blue-100">
        <%= inline_svg_tag "icons/chart-bar.svg", class: "h-6 w-6 text-blue-600"%>
      </div>
      <h4 class="font-semibold text-slate-900">Ver análises</h4>
      <p class="mt-1 text-sm text-slate-600">Acompanhe métricas e performace</p>
    <% end %>

    <%= link_to new_company_path, class: "group rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:border-blue-300 hover:shadow-md" do %>
      <div class="mb-3 inline-block rounded-lg bg-blue-50 p-3 group-hover:bg-blue-100">
        <%= inline_svg_tag "icons/build.svg", class: "h-6 w-6 text-blue-600"%>
      </div>
      <h4 class="font-semibold text-slate-900">Adicionar Empresa</h4>
      <p class="mt-1 text-sm text-slate-600">Adicione novas empresas ao sistema</p>
    <% end %>

    <%= link_to new_candidate_path, class: "group rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:border-blue-300 hover:shadow-md" do %>
      <div class="mb-3 inline-block rounded-lg bg-blue-50 p-3 group-hover:bg-blue-100">
        <%= inline_svg_tag "icons/candidates.svg", class: "h-6 w-6 text-blue-600"%>
      </div>
      <h4 class="font-semibold text-slate-900">Adicionar candidato</h4>
      <p class="mt-1 text-sm text-slate-600">Adicione novos candidatos ao sistema</p>
    <% end %>
  </div>
</div>
