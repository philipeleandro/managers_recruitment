<div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
    <div class="flex items-start justify-between">
      <div>
        <p class="text-sm font-medium text-slate-600">Processos Novos</p>
        <p class="text-xs text-slate-600">Últimos 30 dias</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Recruitment.last_month_opening.count %></p>
      </div>
      <div class="rounded-lg bg-blue-100 p-3 text-blue-700">
        <%= inline_svg_tag "icons/file-text.svg", class: "h-5 w-5" %>
      </div>
    </div>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
    <div class="flex items-start justify-between">
      <div>
        <p class="text-sm font-medium text-slate-900">Processos em Andamento</p>
        <p class="text-xs text-slate-600">Últimos 30 dias</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Recruitment.last_month_in_progress.count %></p>
      </div>
      <div class="rounded-lg bg-green-100 p-3 text-green-700">
        <%= inline_svg_tag "icons/users.svg", class: "h-5 w-5" %>
      </div>
    </div>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
    <div class="flex items-start justify-between">
      <div>
        <p class="text-sm font-medium text-slate-600">Novos Candidatos</p>
        <p class="text-xs text-slate-600">Últimos 30 dias</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Candidate.new_last_month.count %></p>
      </div>
      <div class="rounded-lg bg-purple-100 p-3 text-purple-700">
        <%= inline_svg_tag "icons/chart-bar.svg", class: "h-5 w-5" %>
      </div>
    </div>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
    <div class="flex items-start justify-between">
      <div>
        <p class="text-sm font-medium text-slate-600">Total de Candidaturas</p>
        <p class="text-xs text-slate-600">Últimos 30 dias</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Application.new_last_month.count %></p>
      </div>
      <div class="rounded-lg bg-orange-100 p-3 text-orange-700">
        <%= inline_svg_tag "icons/users.svg", class: "h-5 w-5" %>
      </div>
    </div>
  </div>
</div>
